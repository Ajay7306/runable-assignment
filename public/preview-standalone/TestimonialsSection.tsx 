import React, { useState, useEffect } from 'react';

interface Testimonial {
  name: string;
  role: string;
  company: string;
  image: string;
  content: string;
  rating: number;
}

interface TestimonialsSectionProps {
  title?: string;
  subtitle?: string;
  testimonials?: Testimonial[];
}

const TestimonialsSection: React.FC<TestimonialsSectionProps> = ({
  title = "Loved by Thousands of Users",
  subtitle = "Don't just take our word for it. Here's what real customers say about their experience with our platform.",
